
@model Htmx.Examples.Features.Examples.InlineValidation.CreateVillain.Command


<form hx-post="/examples/inline-validation">
    <partial name="_VillainNameCheck" model=@Model />
    <div class="form-group">
        <label asp-for="Movie">Movie</label>
        <input type="text" class="form-control" asp-for="Movie">
        <span asp-validation-for=Movie></span>
    </div>
    <div>
        <label>Status</label>
    </div>
    <div class="form-group">
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="radio1" asp-for=Status value="Alive" />
            <label class="form-check-label" for="radio1">Alive</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="radio2" asp-for=Status value="Dead" />
            <label class="form-check-label" for="radio2">Dead</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" id="radio3" asp-for=Status value="Unknown" />
            <label class="form-check-label" for="radio3">Unknown</label>
        </div>    
        <span asp-validation-for=Status></span>
    </div>
    
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
    @Html.AntiForgeryToken()
</form>